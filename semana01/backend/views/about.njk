{% extends "layout.njk" %}
{% block head %}
  <title>Sobre | Adonis Cipriano</title>
{% endblock %}
{% block content %}
  <div id="wrapper">
    <img src="{{ about.avatar }}" alt="Foto {{ about.name }}"/>
    <h1>{{ about.name }}</h1>
    <h2>{{ about.role }}</h2>
    <p>
      {{ about.description }}
    </p>
    <ul>
      {% for tech in about.techs %}
        <li>{{ tech.name }}</li>
      {% endfor %}
    </ul>
  </div>
  <footer>
    <div class="links">
      {% for link in about.links %}
        <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
      {% endfor %}
    </div>
  </footer>
{% endblock %}