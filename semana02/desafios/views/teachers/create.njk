{% extends "layout.njk" %}
{% block head %}
  <title>Teachers | Private Lessons</title>
{% endblock head %}
{% block content %}
  <form class="card__container" method="post" action="/teachers">
    <div class="card__avatar"></div>
    <div class="card__details">
      <h3>Novo Professor</h3>
      <div class="card__details-item">
        <div>Avatar</div>
        <div>
          <input type="url" name="avatar_url" placeholder="https://">
        </div>
      </div>

      <div class="card__details-item">
        <div>Professor</div>
        <div>
          <input type="text" name="name" placeholder="Nome completo">
        </div>
      </div>

       <div class="card__details-item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="card__details-item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="level_of_schooling">
            <option value="EnsinoMedio">Ensino Médio Completo</option>
            <option value="EnsinoSuperior">Ensino Superior Completo</option>
            <option value="Mestrado">Mestrado</option>
            <option value="Doutorado">Doutorado</option>
          </select>
        </div>
      </div>

      <div class="card__details-item">
         <div>Tipo de aula</div>
        <div>
          <span>
            <input type="radio" name="class_type" value="Presencial" checked>
            Presencial
          </span>
          <span>
            <input type="radio" name="class_type" value="À Distância">
            À distância
          </span>
        </div>
      </div>

      <div class="card__details-item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="occupation_area" placeholder="Separe as matérias separados por virgula">
        </div>
      </div>

      <button type="submit">Salvar</button>      
        
    </div>
  </form>
{% endblock content %}